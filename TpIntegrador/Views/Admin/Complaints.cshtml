@model List<AyudandoAlProjimo.Data.Denuncias>

@{
    Layout = "~/Views/Shared/PropuestasLayout.cshtml";
    ViewBag.Title = "Denuncias";
}

<div class="container">
    <div class="card margin-top-bottom-50">
        <div class="card-content">
            <div class="row no-margin">
                <h2 class="title-propuesta no-margin" style="margin-bottom: 20px;">Denuncias</h2>
                <div class="row">
                    @foreach (var denuncia in @Model)
                    {
                        <div class="col s4">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title">@denuncia.MotivoDenuncia.Descripcion en @denuncia.Propuestas.Nombre</span>
                                    <p><strong>Fecha: </strong>@denuncia.FechaCreacion</p>
                                    <p><strong>Creado por: </strong>@denuncia.Usuarios.Email</p>
                                    <p><strong>Comentarios:</strong></p>
                                    <p>@denuncia.Comentarios</p>
                                </div>
                                <div class="card-action">
                                    <a href="@Url.Action("DesestimarDenuncia", "Admin", new { id = denuncia.IdDenuncia })">Desestimar</a>
                                    <a href="@Url.Action("AceptarDenuncia", "Admin", new { id = denuncia.IdDenuncia })">Aceptar</a>
                                    <a href="@Url.Action("VerDetalles", "Propuestas", new { id = denuncia.Propuestas.IdPropuesta })">Detalle</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


