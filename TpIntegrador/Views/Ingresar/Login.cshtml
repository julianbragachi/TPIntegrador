@model AyudandoAlProjimo.Data.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/AnonimoLayout.cshtml";
    ViewBag.Title = "Login";
}

<form action="/Ingresar/Login" method="post" class="container">
    @if (TempData["message"] != null)
    {
        <div class="card red">
            <div class="card-content white-text">
                @TempData["message"].ToString()
            </div>
        </div>
    }

    <div class="card">
        <div class="card-content">
            <div class="row no-margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "validate", @required = true } })
                    <label>Usuario</label>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "validate", @required = true, @type = "password" } })
                    <label>Contraseña</label>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="right">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>




