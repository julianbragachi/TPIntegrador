@model AyudandoAlProjimo.Data.ViewModels.PerfilViewModel

@{
    Layout = "~/Views/Shared/PropuestasLayout.cshtml";
    ViewBag.Title = "Mi Perfil";
}

<div class="container">
    <div class="card margin-top-bottom-50">
        @using (Html.BeginForm("Index", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card-content">
                <div class="row d-flex">
                    <div class="col s4 avatar-my-profile-container">
                        <img src="@(string.IsNullOrEmpty(Model.Foto) ? "https://www.w3schools.com/howto/img_avatar.png" : Model.Foto)" style="border-radius: 50%; max-width: 80%; margin-bottom: 20px;" />
                        <div>
                            @Html.TextBoxFor(m => m.Foto, new { type = "file" })
                            <p>
                                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger", @required = false })
                            </p>
                        </div>
                    </div>

                    <div class="col s8">
                        <div class="row">
                            <div class="input-field col s6">
                                @*<i class="material-icons prefix">account_circle</i>*@
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "validate", @disabled = true } })
                                <label>Usuario</label>
                            </div>

                            <div class="input-field col s6">
                                @*<i class="material-icons prefix">email</i>*@
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "validate", disabled = true } })
                                <label>Email</label>
                            </div>

                            <div class="input-field col s6">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "validate", @required = true } })
                                <label>Nombre</label>
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>

                            <div class="input-field col s6">
                                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "validate", @required = true } })
                                <label>Apellido</label>
                                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                            </div>

                            <div class="input-field col s12">
                                @*<i class="material-icons prefix">date_range</i>*@
                                @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "validate", @required = true } })
                                <label class="active">Fecha Nacimiento</label>
                                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                            </div>

                            <div class="right">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Modificar<i class="material-icons right">edit</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>