@model AyudandoAlProjimo.Data.ViewModels.DenunciaViewModel

@{
    Layout = "~/Views/Shared/PropuestasLayout.cshtml";
    ViewBag.Title = "Denunciar";

}
<div class="container">
@using (Html.BeginForm())
{   
    <div class="card margin-top-bottom-50">
        <div class="card-content">
            <div class="input-field col s6">
                <p>Motivo</p>
                @Html.DropDownListFor(d => d.Motivo, new SelectList(new[] {
                                    new { Valor = "Fraude", Name = "Fraude" },
                                    new { Valor = "Indebida", Name = "Indebida" },
                                    new { Valor = "Violación de derechos", Name = "Violación de derechos" },
                                    new { Valor = "Contiene información política", Name = "Contiene información política" },
                                }, "Valor", "Name", 1))
                @Html.ValidationMessageFor(d => d.Motivo, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s12">
                @Html.EditorFor(d => d.Comentarios, new { htmlAttributes = new { @class = "form-control", id="Comentario"} })
                @Html.ValidationMessageFor(d => d.Comentarios, "", new { @class = "text-danger"})
                <label for="Comentario">Comentario</label>
            </div>
            @Html.HiddenFor(i => i.Id, new { Value = Model.Id })
            <div class="right">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Enviar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </div>
        }
</div>
