@model AyudandoAlProjimo.Data.ViewModels.AgregarPropuestaMonetariaViewModel
@{
    Layout = "~/Views/Shared/PropuestasLayout.cshtml";
    ViewBag.Title = "Nueva propuesta";
}

<div class="container">
    <div class="card margin-top-bottom-50">
        <div class="card-content">
            <div class="row no-margin">

                <h5>¿Que tipo de donacion desea que tenga su propuesta?</h5>

                <ul>
                    <li>@Html.ActionLink("Monetaria", "AgregarPropuestaMonetaria", "Propuestas", null, new { @class = "waves-effect waves-teal btn-flat" })</li>
                    <li>@Html.ActionLink("Horas de trabajo", "AgregarPropuestaHoraTrabajo", "Propuestas", null, new { @class = "waves-effect waves-teal btn-flat" })</li>
                    <li>@Html.ActionLink("Insumos", "AgregarPropuestaInsumos", "Propuestas", null, new { @class = "waves-effect waves-teal btn-flat" })</li>
                </ul>

            </div>
        </div>
    </div>
</div>