                <div class="col m6 s12">
                    <div class="card hoverable">
                        <div class="card-image">
                            <img class="materialboxed" src="https://media-cdn.tripadvisor.com/media/photo-s/16/72/0d/c7/monteagudo484.jpg">
                            <span class="card-title">@propuesta.Nombre</span>
                        </div>
                        <div class="card-content">
                            <p>
                                @propuesta.Descripcion
                            </p>
                        </div>
                        <div class="card-action">
                            @Html.ActionLink("Ver Detalles", "VerDetalles", "Propuestas", new { id = @propuesta.IdPropuesta }, null)
                        </div>

                        <a href="@Url.Action("Valoracion", "Propuestas", new { id = propuesta.IdPropuesta, valor = "Like" } )" class="btn btn-primary">
                            <i class="material-icons">
                                thumb_up_alt
                            </i>
                            <span>
                                <strong>Like</strong>
                            </span>
                        </a>

                        <a href="@Url.Action("Valoracion", "Propuestas", new { id = propuesta.IdPropuesta, valor = "Dislike" } )" class="btn btn-primary">
